{% extends 'base.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container example-wrapper">

    {% for post in posts %}
    <h1>{{ post.title }}</h1>
    <h2>{{ post.category.name|default('pas de cat√©gorie') }}</h2>
    <p>{{ post.content }}</p>
        
    {% endfor %}

    <h1 class="text-center m-4">News</h1>

    <div class="border border-primary p-4 mb-5 rounded">
    {{ form(form) }}
    </div>

    <ul>
        {% for item in articles %}
            
            <li>
                <b>{{ item.title }}</b>
                </br>
                <code>{{ item.content }}</code>
            </li>
        {% endfor %}
        
    </ul>
</div>
{% endblock %}

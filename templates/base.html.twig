<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Symfony 7 + Tailwind Demo{% endblock %}</title>
        <link rel="icon" href="/images/favicon.ico">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}   
            <script async src="https://unpkg.com/@material-tailwind/html@latest/scripts/dialog.js"></script>  
            <script async src="https://unpkg.com/@material-tailwind/html@latest/scripts/ripple.js"></script>       
        {% endblock %}
    </head>
    <body class="bg-slate-900">
      {% include('navbar.html.twig') %}
      {% block body %}{% endblock %}
    </body>
</html>
